{
    "name": "omer-hanaraey/laravel-ai-gateway",
    "description": "A unified interface for multiple AI providers in Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Omer hamza",
            "email": "omerhanaraiy@email.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "openai-php/client": "^0.6",
        "symfony/http-client": "^7.2",
        "nyholm/psr7": "^1.8",
        "google/apiclient": "^2.18"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelAiBridge\\Ai\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelAiBridge\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelAiBridge\\Ai\\AiServiceProvider"
            ],
            "aliases": {
                "Ai": "LaravelAiBridge\\Ai\\Facades\\Ai"
            }
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
